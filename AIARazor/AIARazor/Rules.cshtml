@{
    var rules = new List<string>();

    if (Session["rules"] == null)
    {

        rules = new List<string>{
            "You do not talk about Fight Club.",
    "You DO NOT talk about Fight Club.",
    "The fight is over once a person yells ''stop'', taps out, or goes limp.",
    "Only two guys are involved in a fight.",
    "Only one fight occurs at a time.",
    "No shirt, no shoes.",
    "There is no time allotment associated with the fights. They go on until they end. ",
    "First timers at the club must fight. "
    };
        Session["rules"] = rules;
    }
    rules = (List<string>)Session["rules"];

    if (IsPost)
    {
        rules.Add(Request["rule"]);
        Session["rules"] = rules;
        Response.Redirect("Rules.cshtml");
    }
}
<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body>
    <ol>
        @foreach (string rule in rules)
        {
            <li>@rule</li>
        }
    </ol>
    <form method="post" action="~/Rules.cshtml">
        <input type="text" name="rule" />
        <input type="submit" />
    </form>
</body>
</html>
